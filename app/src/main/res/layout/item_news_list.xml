<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_6dp"
        android:elevation="@dimen/padding_margin_6dp"
        android:id="@+id/news_cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_image"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textSize="@dimen/padding_margin_20dp"
                android:textStyle="bold"
                android:layout_margin="@dimen/padding_margin_6dp"
                android:id="@+id/news_title"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION"
                android:textSize="@dimen/padding_margin_16dp"
                android:layout_margin="@dimen/padding_margin_6dp"
                android:id="@+id/news_description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AUTHOR"
                android:textSize="@dimen/padding_margin_12dp"
                android:layout_margin="@dimen/padding_margin_6dp"
                android:id="@+id/news_author"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>